{
    "manifest_version": 3,
    "name": "Edit HTML Node",
    "version": "1.0",
    "description": "Allows editing of HTML text nodes via right-click context menu.",
    "permissions": [
        "contextMenus",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}